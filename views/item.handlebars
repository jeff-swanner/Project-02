{{> nav/nav-block isloggedin=true}}

<div class="ui masthead" id="item-container">
  <div class="ui raised very padded text container segment">
    <header class="ui header">
      <h1>{{msg}}</h1>
    </header>
    <form class="ui centered form" action="POST">
      <div class="field">
        <label for="ui selection dropdown">Choose A Category</label>
        <div class="ui selection dropdown">
          <input type="hidden" name="category" id="item-category">
          <i class="dropdown icon"></i>
          <div class="default text">Category
          </div>
          <div class="menu">
            <div class="item" data-value="1">Coats</div>
            <div class="item" data-value="2">Pants</div>
            <div class="item" data-value="3">Dresses</div>
            <div class="item" data-value="4">Shirts</div>
            <div class="item" data-value="5">Shoes</div>
            <div class="item" data-value="6">Accessories</div>
          </div>
        </div>
      </div>
      <div class="field">
        <label for="item-post">Item Name</label>
        <input type="text" id="item-name" name="item name" placeholder="Item Name">
      </div>
      <div class="field" id="item-entry">
        <label for="item-post">Item Price</label>
        <input type="text" id="item-price" name="item name" placeholder="Item Price">
      </div>
      <div class="ui large teal submit button" id="submit"><i class="plus icon"></i>Submit Item</div>
    </form>
  </div>
</div>
        
  <div id="item-list" class="ui container">
          <h1>My Items:</h1>
          {{#each items}}
          <div data-id="{{this.id}}" class="item">
            <div class="image">
              <img src="#">
            </div>
            <div class="content">
              <a class="header">{{this.text}}</a>
              <div class="meta">
                <span>Description</span>
                  <div class="description">
                    <p><a href="item/{{this.id}}">{{this.description}}</a></p>
                  </div>
                  <div class="extra">
                    Additional Details
                  </div>
              </div>
            </div>
          </div>
            <a href="/delete" class="ui button negative" id="delete">
              <i class="trash alternate icon"></i>
            </a>
          {{/each}}
      </div>
    </div>

<script>
  $('.ui.dropdown')
  .dropdown();
</script>
<script src="/assets/js/items.js"></script>

{{> modal/login-block}}

